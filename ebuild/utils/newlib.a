if [[ ! -d ${T} ]]; then
    echo "${0}: \${T} not valid; aborting" >&2
    exit 247
fi

if [[ ${#} -ne 2 ]]; then
    echo "${0}: exactly two arguments needed" >&2
    exit 1
fi

rm -rf "${T}/${2}"
cp "${1}" "${T}/${2}"
dolib.a "${T}/${2}"
